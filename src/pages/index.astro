---
import Layout from '../layouts/Layout.astro';

---

<Layout>
	<main>
		<section class="hero">
			<div class="wrapper">
				<h1>One Journey, One Heart</h1>
				<p>Lorem, ipsum dolor sit amet consectetur adipisicing elit. Odio, ratione!</p>
				<a href="/about" class="btn btn-primary">About Us</a>
			</div>
		</section>

			<section class="upcoming">
				<div class="wrapper">
					<h2>Upcoming News</h2>
					<p>Lorem ipsum dolor sit amet.</p>
				</div>
			</section>


	</main>
</Layout>
<style>
	.hero {
		min-height: 600px;
		background-color: rgb(225, 225, 225);
		display: flex;
		align-items: center;
	}

	.hero .wrapper {
		width: 100%;
		display: flex;
		flex-direction: column;
		justify-content: center;
	}

	h1 {
		margin-bottom: 1em;
		color: var(--clr-blue);
		font-size: 3rem;
	}

	.hero p {
		margin-bottom: 1em;
	}

	.hero .btn {
		margin-bottom: 1em;
	}

	.upcoming {
		min-height: 400px;
		background-color: var(--clr-white);
	}

	.upcoming h2 {
		margin-bottom: 1em;
		color: var(--clr-blue);
		font-size: 2rem;
		text-align: center;
	}
</style>