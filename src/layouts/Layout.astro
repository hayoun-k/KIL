---
import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro"
import '@fontsource/source-sans-pro';
import '@fontsource/montserrat';
---


<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro Basics</title>
	</head>
	<body>
		<Header />

		<slot />

		<Footer />
	</body>
</html>

<style is:global>
	:root {
		/* --clr-red: #CD313A; */
		--clr-red: #cc3333;
		/* --clr-blue: #0047A0; */
		--clr-blue: #336699;
		--clr-green: #009933;
		--clr-yellow: #ff9933;
		--clr-dark: #0E0E0E;
		--clr-white: #fafafa;
	}


	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}

	.wrapper {
		max-width: 1200px;
		margin: auto;
		padding: 40px;
	}

	h1,h2,h3 {
		font-family: 'Montserrat', sans-serif;
		color: var(--clr-red);
	}

	p,a,span,li {
		font-family: 'Source Sans Pro', sans-serif;
		color: var(--clr-dark);
	}

	p {
		font-size: 1.1rem;
		line-height: 1.2;
	}

	a {
		text-decoration: none;
		color: inherit;
	}

	a:hover {
		text-decoration: underline;
	}

	button {
		background-color: unset;
		border: unset;
	}

	li {
		list-style-type: none;
	}

	.btn {
		padding: 0.5em 1em;
		border-radius: 5px;
		display: block;
	}

	.btn-primary {
		width: fit-content;
		color: var(--clr-white);
		background-color: var(--clr-red);
		display: flex;
	}
</style>
